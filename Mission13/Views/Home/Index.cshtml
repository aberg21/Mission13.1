@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>@ViewBag.TeamName</h1>
<br />
<h1>Bowlers</h1>
<br />
<a asp-action="Form" class="btn btn-primary">Create New Bowler</a>
<br />
<br />
<br />
<table class="table table-sm table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            @*<td>Bowler ID</td>*@
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() > 0)
        {
            foreach (var b in Model)
            {
        <tr>
            <td>@b.BowlerFirstName</td>
            @if (b.BowlerMiddleInit == "NULL")
            {
                <td></td>
            }
            else
            {
                <td>@b.BowlerMiddleInit</td>
            }
            
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-bowlerId="@b.BowlerID">Edit</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Delete" asp-route-bowlerId="@b.BowlerID">Delete</a>
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Bowler</td>
            </tr>
        }
    </tbody>
</table>
        